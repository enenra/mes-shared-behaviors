    <!-- Combat mode -->
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>MSB_Interaction_TradeRequest_Trigger_CombatMode</SubtypeId>
      </Id>
      <Description>
        [RivalAI Trigger]

        [Type:Manual]
        [Tags:MSB_CombatType_InitCombatType]

        [UseTrigger:false]
        [StartsReady:true]

        [MinCooldownMs:600]
        [MaxCooldownMs:601]

        [Actions:MSB_Interaction_TradeRequest_Action_CombatMode]
      </Description>
    </EntityComponent>
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
