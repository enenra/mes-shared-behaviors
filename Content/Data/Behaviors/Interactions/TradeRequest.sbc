<?xml version="1.0"?>
<Definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <EntityComponents>

    <!--

      TradeRequest
      Encounter is either given the MSB_Interaction_TradeRequest_TriggerGroup or the MSB_Interaction_TradeRequest_TriggerGroup_Decline, based on if it should engage in trade or not.
        * MSB_Interaction_TradeRequest_TriggerGroup - If neutral or friendly, encounter will stop and let player trade, then move on after the defined time.
        * MSB_Interaction_TradeRequest_TriggerGroup_Decline - Encounter will respond to request but decline and ignore further requests.

    -->

    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>MSB_Interaction_TradeRequest_TriggerGroup</SubtypeId>
      </Id>
      <Description>
        [RivalAI TriggerGroup]

        [Triggers:MSB_Interaction_TradeRequest_Trigger_Received_Friendly]
        [Triggers:MSB_Interaction_TradeRequest_Trigger_Received_Neutral]
        [Triggers:MSB_Interaction_TradeRequest_Trigger_Received_Hostile]

        [Triggers:MSB_Interaction_TradeRequest_Trigger_Duration30min]
        [Triggers:MSB_Interaction_TradeRequest_Trigger_ResumeCourse1min]
        [Triggers:MSB_Interaction_TradeRequest_Trigger_CombatMode]
      </Description>
    </EntityComponent>

    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>MSB_Interaction_TradeRequest_TriggerGroup_Decline</SubtypeId>
      </Id>
      <Description>
        [RivalAI TriggerGroup]

        [Triggers:MSB_Interaction_TradeRequest_Trigger_Decline_Friendly]
        [Triggers:MSB_Interaction_TradeRequest_Trigger_Decline_Neutral]
        [Triggers:MSB_Interaction_TradeRequest_Trigger_Decline_Hostile]
      </Description>
    </EntityComponent>

    <!-- Decline - When the encounter refuses to trade in all instances. -->
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>MSB_Interaction_TradeRequest_Trigger_Decline_Friendly</SubtypeId>
      </Id>
      <Description>
        [RivalAI Trigger]

        [Type:CommandReceived]
        [CommandReceiveCode:MSB_Interaction_TradeRequest]

        [UseTrigger:true]
        [StartsReady:true]

        [MinCooldownMs:5000]
        [MaxCooldownMs:5001]

        [Conditions:MSB_Context_Condition_PlayerFriendly]

        [Actions:MSB_Interaction_TradeRequest_Action_Decline_Friendly]
      </Description>
    </EntityComponent>
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>MSB_Interaction_TradeRequest_Action_Decline_Friendly</SubtypeId>
      </Id>
      <Description>
        [RivalAI Action]

        [//DebugMessage:Interaction - TradeRequest - Decline - Friendly]

        [DisableTriggers:true]
        [DisableTriggerNames:MSB_Interaction_TradeRequest_Trigger_Decline_Friendly]

        [PlayDialogueCue:true]
        [DialogueCueId:Interaction_TradeRequest_Decline_Friendly]
      </Description>
    </EntityComponent>

    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>MSB_Interaction_TradeRequest_Trigger_Decline_Neutral</SubtypeId>
