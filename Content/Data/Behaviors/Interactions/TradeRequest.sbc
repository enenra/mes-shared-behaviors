    <!-- TradingModeDuration -->
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>MSB_Interaction_TradeRequest_Trigger_Duration30min</SubtypeId>
      </Id>
      <Description>
        [RivalAI Trigger]

        [Type:Timer]
        [Tags:MSB_TradingModeDuration]

        [UseTrigger:false]
        [StartsReady:false]

        [MinCooldownMs:1800000]
        [MaxCooldownMs:1800001]

        [Actions:MSB_Interaction_TradeRequest_Action_SignalLeaving]
      </Description>
