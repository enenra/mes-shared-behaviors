    <!-- Common Actions-->
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>MSB_Interaction_TradeRequest_Action_SignalLeaving</SubtypeId>
      </Id>
      <Description>
        [RivalAI Action]

        [//DebugMessage:Interaction - TradeRequest - SignalLeaving]

        [SetAntennaThoughtBubble:true]
        [SetAntennaThoughtBubbleName:Preparing to leave]

        [ResetCooldownTimeOfTriggers:true]
        [ResetTriggerCooldownTags:MSB_TradingModeResumeCourse]

        [EnableTriggers:true]
        [EnableTriggerTags:MSB_TradingModeResumeCourse]
        [EnableTriggerNames:MSB_Interaction_TradeRequest_Trigger_CombatMode]

        [DisableTriggers:true]
        [DisableTriggerTags:MSB_TradingModeDuration]

        [PlayDialogueCue:true]
        [DialogueCueId:Interaction_TradeRequest_SignalLeaving]
      </Description>
    </EntityComponent>

    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>MSB_Interaction_TradeRequest_Action_ResumeCourse</SubtypeId>
      </Id>
      <Description>
        [RivalAI Action]

        [EnableAutopilot:true]

        [ClearAntennaThoughtBubble:true]

        [DisableTriggers:true]
        [DisableTriggerTags:MSB_TradingModeResumeCourse]
        [DisableTriggerNames:MSB_Interaction_TradeRequest_Trigger_CombatMode]

        [PlayDialogueCue:true]
