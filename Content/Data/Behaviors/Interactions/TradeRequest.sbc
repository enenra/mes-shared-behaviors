        [MaxCooldownMs:5001]

        [Conditions:MSB_Context_Condition_PlayerNeutral]

        [Actions:MSB_Interaction_TradeRequest_Action_Decline_Neutral]
      </Description>
    </EntityComponent>
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>MSB_Interaction_TradeRequest_Action_Decline_Neutral</SubtypeId>
      </Id>
      <Description>
        [RivalAI Action]

        [//DebugMessage:Interaction - TradeRequest - Decline - Hostile]

        [DisableTriggers:true]
        [DisableTriggerNames:MSB_Interaction_TradeRequest_Trigger_Decline_Neutral]

        [PlayDialogueCue:true]
        [DialogueCueId:Interaction_TradeRequest_Decline_Neutral]
      </Description>
    </EntityComponent>

    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>MSB_Interaction_TradeRequest_Trigger_Decline_Hostile</SubtypeId>
      </Id>
      <Description>
        [RivalAI Trigger]

        [Type:CommandReceived]
        [CommandReceiveCode:MSB_Interaction_TradeRequest]

        [UseTrigger:true]
        [StartsReady:true]

        [MinCooldownMs:5000]
        [MaxCooldownMs:5001]

        [Conditions:MSB_Context_Condition_PlayerHostile]

        [Actions:MSB_Interaction_TradeRequest_Action_Decline_Hostile]
      </Description>
    </EntityComponent>
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>MSB_Interaction_TradeRequest_Action_Decline_Hostile</SubtypeId>
      </Id>
      <Description>
        [RivalAI Action]

        [//DebugMessage:Interaction - TradeRequest - Decline - Hostile]

        [DisableTriggers:true]
        [DisableTriggerNames:MSB_Interaction_TradeRequest_Trigger_Decline_Hostile]

        [PlayDialogueCue:true]
        [DialogueCueId:Interaction_TradeRequest_Decline_Hostile]
      </Description>
    </EntityComponent>

    <!-- Receive - Based on player reputation the encounter may accept or decline. -->
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>MSB_Interaction_TradeRequest_Trigger_Received_Friendly</SubtypeId>
      </Id>
      <Description>
        [RivalAI Trigger]

        [Type:CommandReceived]
        [CommandReceiveCode:MSB_Interaction_TradeRequest]

        [UseTrigger:true]
        [StartsReady:true]

        [MinCooldownMs:5000]
        [MaxCooldownMs:5001]

        [Conditions:MSB_Context_Condition_PlayerFriendly]

        [Actions:MSB_Interaction_TradeRequest_Action_Received_Friendly]
      </Description>
    </EntityComponent>
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>MSB_Interaction_TradeRequest_Action_Received_Friendly</SubtypeId>
      </Id>
      <Description>
        [RivalAI Action]

        [//DebugMessage:Interaction - TradeRequest - Received - Friendly]

        [DisableAutopilot:true]
        [StopAllRotation:true]
        [StopAllThrust:true]

        [ClearAllWaypoints:true]

        [SetAntennaThoughtBubble:true]
        [SetAntennaThoughtBubbleName:Trading]

        [DisableTriggers:true]
        [DisableTriggerNames:MSB_Interaction_TradeRequest_Trigger_Received]

        [ResetCooldownTimeOfTriggers:true]
        [ResetTriggerCooldownTags:MSB_TradingModeDuration]

        [EnableTriggers:true]
        [EnableTriggerTags:MSB_TradingModeDuration]
        [EnableTriggerNames:MSB_Interaction_TradeRequest_Trigger_CombatMode]

        [PlayDialogueCue:true]
        [DialogueCueId:Interaction_TradeRequest_Received_Friendly]
      </Description>
    </EntityComponent>

    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
