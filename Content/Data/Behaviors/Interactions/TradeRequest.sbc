        [DisableTriggers:true]
        [DisableTriggerTags:MSB_TradingModeResumeCourse]
        [DisableTriggerTags:MSB_TradingModeDuration]

        [DisableTriggerNames:MSB_Interaction_TradeRequest_Trigger_CombatMode]

        [PlayDialogueCue:true]
        [DialogueCueId:Interaction_TradeRequest_CombatMode]
      </Description>
    </EntityComponent>

  </EntityComponents>
</Definitions>